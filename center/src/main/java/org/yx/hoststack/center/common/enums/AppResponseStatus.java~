package org.yx.hoststack.center.common.constant;

import org.springframework.http.HttpStatus;

import static org.yx.hoststack.center.common.constant.ReturnMessageConstant.success;


public enum AppResponseStatus {

    OK(0, HttpStatus.OK, success),
    BAD_REQUEST(114400, HttpStatus.OK, "Incorrect input, please confirm"),
    UNAUTHORIZED(114401, HttpStatus.OK, "Unauthorized"),
    ACCESS_RESTRICTED(114402, HttpStatus.OK, "Access restricted.Please contact support for assistance."),
    PASSWORD_ERROR(114403, HttpStatus.OK, "Incorrect account or password, please check."),
    METHOD_NOT_ALLOWED(114405, HttpStatus.OK, "Method Not Allowed"),
    INTERNAL_SERVER_ERROR(114500, HttpStatus.OK, "The system is busy. Please try again later"),
    DB_SQL_SERVER_ERROR(114501, HttpStatus.OK, "Data query syntax error"),
    DB_DATA_QUERY_ERROR(114502, HttpStatus.OK, "Data query error"),
    DB_DATA_WRITE_ERROR(114503, HttpStatus.OK, "Data write error"),
    X_USER_NOT_FOUND(114406, HttpStatus.UNAUTHORIZED, "Authorization expired. The platform will auto-login. If it fails, please log in manually."),
    X_USER_PARSING_ERROR(114502, HttpStatus.INTERNAL_SERVER_ERROR, "Error parsing current session information"),
    AES_DECRYPT_ERROR(114503, HttpStatus.INTERNAL_SERVER_ERROR, "AESUtil decrypt failed"),
    AKSK_INVALID_ERROR(114520, HttpStatus.OK, "AkSk has expired"),
    AKSK_GENERATE_ERROR(114521, HttpStatus.OK, "AkSk generation failed"),
    FORBIDDEN(114700, HttpStatus.OK, "Forbidden"),
    NOT_FOUND(114701, HttpStatus.OK, "Not Found"),
    NO_DATA_OBTAINED(114411, HttpStatus.OK, "No data obtained"),
    INVALID_PARAMETER(114413, HttpStatus.OK, "Invalid parameter"),

    ;

    private final Integer code;
    private final HttpStatus httpStatus;
    private final String msg;

    AppResponseStatus(Integer code, HttpStatus httpStatus, String msg) {
        this.code = code;
        this.httpStatus = httpStatus;
        this.msg = msg;
    }

    public Integer getCode() {
        return code;
    }

    public HttpStatus getHttpStatus() {
        return httpStatus;
    }

    public String getMsg() {
        return msg;
    }
}
